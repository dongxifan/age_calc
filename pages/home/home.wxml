<view class="content">
  <view class="bg">
    <image src='./../../static/bg.jpg' mode="widthFix" class="bg-image"></image>
  </view>
  <view class="choose-title">请选择阳历生日</view>
  <view class="date" bindtap="showDate">{{currentDateText}}</view>
  <van-button type="primary" block class="start-btn" size="large" bindtap="showResult">年龄计算</van-button>
  <van-popup show="{{ showDatePanel }}" round position="bottom" custom-style="height: 50%;" bind:close="closeDate">
    <!-- <van-datetime-picker type="date" value="{{ currentDate }}"  min-date="{{ minDate }}" max-date="{{ maxDate }}" formatter="{{ formatter }}" bind:cancel="cancelDate" bind:confirm="confirmDate"/> -->
    <picker-view indicator-style="height: 50px;" style="width: 100%;height: calc(100% - 180rpx)" value="{{value}}" bindchange="bindChange">
      <picker-view-column>
        <view wx:for="{{years}}" wx:key="{{years}}" style="line-height: 50px; text-align: center;">{{item}}年</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:for="{{months}}" wx:key="{{months}}" style="line-height: 50px; text-align: center;">{{item}}月</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:for="{{days}}" wx:key="{{days}}" style="line-height: 50px; text-align: center;">{{item}}日</view>
      </picker-view-column>
    </picker-view>
    <view class="date-footer">
      <van-button type="default" class="date-btn cancel-btn" bindtap="cancelDate">取消</van-button>
      <van-button type="primary" class="date-btn confirm-btn" bindtap="confirmDate">确认</van-button>
    </view>
  </van-popup>
</view>